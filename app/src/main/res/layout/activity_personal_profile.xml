<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalProfile">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.40"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bgopacity" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat"
        android:padding="5dp"
        android:text="Personal Information"
        android:textAlignment="center"
        android:textColor="#2B6777"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <EditText
            android:id="@+id/firstTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:enabled="false"
            android:hint=" First Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/middleTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:enabled="false"
            android:hint=" Middle Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstTxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/lastTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:enabled="false"
            android:hint=" Last Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middleTxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/extTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:hint=" Extension Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastTxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/sexTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:text="Sex"
            android:textColor="#2B6777"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/extTxt" />

        <RadioGroup
            android:id="@+id/radioSexGrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sexTxt">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Male"
                android:textColor="#2B6777"
                android:textColorHighlight="#070707"
                android:textColorLink="#070707"
                android:textSize="20sp"
                app:buttonTint="#2B6777"
                app:layout_constraintEnd_toStartOf="@+id/guideline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sexTxt" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#2B6777"
                android:textSize="20sp"
                app:buttonTint="#2B6777"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/maleRadio" />

        </RadioGroup>

        <EditText
            android:id="@+id/maidenTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:hint=" Maiden Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioSexGrp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/ageTxt"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:hint=" Age"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maidenTxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/bdateTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:enabled="false"
            android:hint=" Birth Date"
            android:inputType="date"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/bdateBtn"
            app:layout_constraintStart_toEndOf="@+id/ageTxt"
            app:layout_constraintTop_toTopOf="@+id/ageTxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/bdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="#2B6777"
            android:text="DATE"
            app:backgroundTint="#2B6777"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bdateTxt" />

        <EditText
            android:id="@+id/bplaceTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:hint=" Birth Place"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ageTxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/moboTxt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_border"
            android:ems="10"
            android:hint=" Mobile Number"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#2B6777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bplaceTxt"
            tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/personBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="#2B6777"
        android:text="NEXT"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#2B6777"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moboTxt"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>